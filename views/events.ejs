    <header class="site-header">
        <nav class="navbar">
            <a href="/" class="navbar-brand">EVENTIFY</a>
            <ul class="navbar-links">
                <li><a href="/userauth/home">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/events">Events</a></li>
