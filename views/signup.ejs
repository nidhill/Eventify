<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Eventify Signup</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
    }

    html, body {
      height: 100%;
      width: 100%;
      overflow: hidden;
    }

    .container {
      display: flex;
      height: 100vh;
      width: 100vw;
    }

    .left-panel {
      flex: 1;
      position: relative;
    }

    .bg-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .eventify-title {
      position: absolute;
      top: 20px;
      left: 20px;
      color: white;
      font-size: 24px;
      font-weight: bold;
    }

    .right-panel {
      flex: 1;
      background: linear-gradient(to bottom right, #12003f, #1d0a6c);
      color: white;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .form-wrapper {
      width: 100%;
      max-width: 360px;
    }

    .login-title {
      font-size: 30px;
      font-weight: bold;
      margin-bottom: 6px;
    }

    .login-subtext {
      color: #ccc;
      font-size: 14px;
      margin-bottom: 24px;
    }

    form input,
    form select {
      width: 100%;
      padding: 10px;
      margin-bottom: 14px;
      background-color: #3b2060;
      border: none;
      border-radius: 6px;
      color: white;
      font-size: 14px;
    }

    form input::placeholder {
      color: #aaa;
    }

    form button {
      width: 100%;
      padding: 10px;
      background: linear-gradient(to right, #5a22c8, #6785ea);
      color: white;
      font-size: 14px;
      font-weight: bold;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    .or {
      text-align: center;
      margin: 18px 0 12px;
      color: #aaa;
      font-size: 13px;
    }

    .google-auth {
      display: flex;
      justify-content: center;
    }

    .google-btn {
      width: 100%;
      padding: 10px;
      background-color: #4d1eb1;
      color: white;
      border: none;
      border-radius: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      font-size: 14px;
      font-weight: bold;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.3s ease;
    }

    .google-btn:hover {
      background-color: #3c1794;
    }

    .google-logo {
      width: 18px;
      height: 18px;
    }

    .signup-link {
      text-align: center;
      margin-top: 18px;
      font-size: 13px;
    }

    .signup-link a {
      color: #a0c0ff;
      text-decoration: none;
    }

    .signup-link a:hover {
      text-decoration: underline;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }

      .left-panel,
      .right-panel {
        width: 100%;
        height: 50vh;
      }

      .right-panel {
        padding-top: 40px;
      }

      .eventify-title {
        font-size: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Left Side -->
    <div class="left-panel">
      <img src="https://i.gifer.com/embedded/download/OZpL.gif" alt="Event Crowd" class="bg-image" />
      <h1 class="eventify-title">EVENTIFY</h1>
    </div>

    <!-- Right Side -->
    <div class="right-panel">
      <div class="form-wrapper">
        <h1 class="login-title">SIGNUP</h1>
        <p class="login-subtext">Create your account below</p>

        <form action="/userauth/signup" method="POST">
          <input type="text" name="username" placeholder="Username" required />
          <input type="email" name="email" placeholder="Email" required />
          <input type="password" name="password" placeholder="Password" required />
          <select name="usertype">
            <option value="attendee">Attendee</option>
            <option value="creator">Creator</option>
          </select>
          <button type="submit">Signup</button>
        </form>

        <p class="or">Or continue with</p>

        <div class="google-auth">
          <a href="/userauth/auth/google" class="google-btn">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c1/Google_%22G%22_logo.svg/800px-Google_%22G%22_logo.svg.png" alt="Google Logo" class="google-logo" />
            <span>Signup with Google</span>
          </a>
        </div>

        <div class="signup-link">
          <p>Already have an account? <a href="/userauth/showlogin">Login</a></p>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
